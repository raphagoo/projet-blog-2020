{% extends 'base.html.twig' %}

{% block title %}Backoffice - Article
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col s12">

				<h1>Backoffice - Articles</h1>
				<table class="table">
					<thead>
						<tr class="row">
							<th class="col-6 col-md-4">#</th>
							<th class="col-6 col-md-4">Article</th>
							<th class="col-6 col-md-4"></th>
						</tr>
					</thead>

					<tbody>
						{% for article in articles %}
							<tr class="row">
								<td class="col-6 col-md-4">
									{{ article.id }}
								</td>
								<td class="col-6 col-md-4">{{ article.title }}</td>
								<td class="col-6 col-md-4">
									<a href="{{ path('editArticle', {'idArticle': article.id}) }}">
										<button class="btn btn-info" type="button">edit</button>
									</a>
								</td>
							</tr>
						{% endfor %}

					</tbody>
				</tbody>
			</table>
			<a href="{{ path('backofficeAddArticle') }}">Ajouter un article</a>
		</div>
	</div>
</div>{% endblock %}
