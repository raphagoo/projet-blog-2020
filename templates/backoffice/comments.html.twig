

{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
      <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Comment</th>
    <th scope="col">Status</th>
    <th scope="col"></th>
    </tr>
  </thead>
  
  <tbody>
    {% for comment in comments %}
<tr>
  <td>
      {{ comment.id }}
  </td>
      <td>{{ comment.author.email }}</td>
<td>{{ comment.article.title}}</td>
     <td>{% if comment.approved is same as(true) %} Approved {% endif %} {% if comment.approved is same as (false) %} Refused {% endif %} {% if comment.approved is same as (null) %} Waiting {% endif %}</td>
 
   
 <td><a href="{{ path('editComment', {'idComment': comment.id}) }}"><button class="btn btn-info" type="button">View/Approve</button></a> </li></td>
    
  
</tr>
    {% endfor %}
    </tbody>
</table>
    
</div>
{% endblock %}